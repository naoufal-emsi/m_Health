<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_planning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planning des MÃ©decins"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <ListView
        android:id="@+id/list_planning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_planning"
        android:layout_above="@id/btn_retour_planning"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn_retour_planning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour au menu"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#87CEEB"
        android:textColor="@android:color/black" />
</RelativeLayout>
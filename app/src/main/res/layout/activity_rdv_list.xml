<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_titre_liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des Rendez-vous"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/lv_rendezvous"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_titre_liste"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_retour_planning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour au menu"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#87CEEB"
        android:textColor="@android:color/black" />
</RelativeLayout>